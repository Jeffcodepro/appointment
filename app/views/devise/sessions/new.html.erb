<div class="auth-page clean">
  <div class="auth-card clean">
    <h1 class="auth-title clean text-center">Log in</h1>

    <%= simple_form_for(
          resource,
          as: resource_name,
          url: session_path(resource_name),
          html: { data: { turbo: false }, class: "auth-form clean" }
        ) do |f| %>

      <%= hidden_field_tag :return_to, params[:return_to] if params[:return_to].present? %>

      <div class="form-inputs">
        <%= f.input :email, label: "E-mail", required: true, autofocus: true,
              input_html: { autocomplete: "email", class: "auth-input clean" } %>

        <%= f.input :password, label: "Senha", required: true,
              input_html: { autocomplete: "current-password", class: "auth-input clean" } %>

        <div class="auth-aux clean">
          <label class="boolean">
            <%= f.check_box :remember_me %> Lembrar de mim
          </label>
          <%= link_to "Esqueci minha senha", new_password_path(resource_name), class: "auth-link clean" %>
        </div>

      </div>

      <div class="form-actions stack">
        <%= f.button :submit, "Entrar", class: "btn-auth clean" %>
        <%= link_to "Criar conta", new_registration_path(resource_name), class: "btn-auth-outline clean" %>
      </div>
    <% end %>

    <%# removido o render dos links padrão para não repetir "Forgot your password" %>
  </div>
</div>
