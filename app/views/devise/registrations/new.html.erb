<!-- app/views/devise/registrations/new.html.erb -->
<h2>Criar conta</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <%= f.input :role, as: :select,
        collection: [["Cliente", "client"], ["Profissional", "professional"]],
        prompt: "Selecione o tipo de conta",
        label: "Tipo de usuário" %>

  <%= f.input :name,  label: "Nome completo" %>
  <%= f.input :email, required: true %>
  <%= f.input :password, required: true, hint: ("#{@minimum_password_length} caracteres no mínimo" if @minimum_password_length) %>
  <%= f.input :password_confirmation, required: true %>

  <%= f.button :submit, "Cadastrar" %>
<% end %>

<%= render "devise/shared/links" %>
