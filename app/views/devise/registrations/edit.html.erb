<h2>Editar conta</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, data: { controller: "cep" } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :role, as: :select,
      collection: [["Cliente", "client"], ["Profissional", "professional"]],
      label: "Tipo de usuário" %>

    <%= f.input :name, label: "Nome completo" %>
    <%= f.input :phone_number, label: "Telefone" %>

    <%= f.input :cep,
      label: "CEP",
      input_html: { data: { "cep-target": "cepField", action: "keyup->cep#search" } } %>

    <%= f.input :city,
      label: "Cidade",
      input_html: { data: { "cep-target": "cityField" } } %>
    <%= f.input :state,
      label: "Estado",
      input_html: { data: { "cep-target": "stateField" } } %>

    <%= f.input :address, label: "Endereço" %>
    <%= f.input :description, label: "Descrição", as: :text %>

    <%= f.input :email, required: true %>

    <%= f.input :current_password, label: "Senha atual", hint: "Necessária para confirmar alterações", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Salvar alterações" %>
  </div>
<% end %>

<%= link_to "Cancelar minha conta", registration_path(resource_name),
            data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" },
            class: "btn btn-outline-danger mt-3" %>
