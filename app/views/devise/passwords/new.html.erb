<div class="auth-page clean">
  <div class="auth-card clean">
    <h1 class="auth-title clean">Recuperar senha</h1>

    <%= simple_form_for(
          resource,
          as: resource_name,
          url: password_path(resource_name),
          html: { data: { turbo: false }, class: "auth-form clean" }
        ) do |f| %>

      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
              label: "E-mail",
              required: true,
              autofocus: true,
              input_html: { class: "auth-input clean", autocomplete: "email" } %>
      </div>

      <div class="form-actions stack">
        <%= f.button :submit, "Enviar instruÃ§Ãµes", class: "btn-auth clean" %>
        <%= link_to "Voltar ao entrar", new_session_path(resource_name), class: "btn-auth-outline clean" %>
      </div>
    <% end %>
  </div>
</div>
