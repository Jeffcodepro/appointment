<% content_for :title, "Novo agendamento pendente" %>
<% content_for :header_tagline do %>
  Você tem uma solicitação aguardando ação
<% end %>

<p style="margin:0 0 8px 0;font:700 18px/1.3 system-ui,-apple-system,Segoe UI,Roboto;color:#0f172a;">
  Confirme ou recuse este agendamento
</p>

<p style="margin:0 0 16px 0;font:400 14px/1.6 system-ui,-apple-system,Segoe UI,Roboto;color:#334155;">
  Olá <strong><%= @professional&.name || "profissional" %></strong>, você recebeu uma solicitação de
  <strong><%= @client&.name || "um cliente" %></strong>.
</p>

<table role="presentation" cellpadding="0" cellspacing="0" style="width:100%;margin:6px 0 18px 0;border:1px solid #e5e7eb;border-radius:12px;">
  <tr>
    <td style="padding:14px 16px;border-bottom:1px solid #e5e7eb;">
      <div style="font:500 12px/1.4 system-ui,-apple-system,Segoe UI,Roboto;color:#6b7280;text-transform:uppercase;letter-spacing:.02em;">Procedimento</div>
      <div style="font:600 15px/1.4 system-ui,-apple-system,Segoe UI,Roboto;color:#0f172a;"><%= @service&.subcategories %></div>
    </td>
  </tr>
  <% if @start.present? %>
    <tr>
      <td style="padding:14px 16px;border-bottom:1px solid #e5e7eb;">
        <div style="font:500 12px/1.4 system-ui,-apple-system,Segoe UI,Roboto;color:#6b7280;text-transform:uppercase;letter-spacing:.02em;">Quando</div>
        <div style="font:600 15px/1.4 system-ui,-apple-system,Segoe UI,Roboto;color:#0f172a;">
          <%= l(@start, format: :long) %><% if @end %> — <%= l(@end, format: :time) %><% end %>
        </div>
      </td>
    </tr>
  <% end %>
  <tr>
    <td style="padding:14px 16px;">
      <div style="font:500 12px/1.4 system-ui,-apple-system,Segoe UI,Roboto;color:#6b7280;text-transform:uppercase;letter-spacing:.02em;">Cliente</div>
      <div style="font:600 15px/1.4 system-ui,-apple-system,Segoe UI,Roboto;color:#0f172a;"><%= @client&.name || "Cliente" %></div>
    </td>
  </tr>
</table>

<span style="display:inline-block;padding:8px 10px;border-radius:999px;font:600 12px/1 system-ui,-apple-system,Segoe UI,Roboto;color:#1e3a8a;background:#dbeafe;border:1px solid #bfdbfe;">
  Aguardando confirmação
</span>
