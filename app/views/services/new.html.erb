<!-- app/views/services/new.html.erb -->
<% content_for :head do %>
  <meta name="turbo-cache-control" content="no-preview">
<% end %>

<div class="container py-4">
  <div class="card border-0 mb-4 overflow-hidden shadow-sm">
    <div class="row g-0 align-items-center">
      <div class="col-auto p-3">
        <div class="rounded-circle overflow-hidden bg-light" style="width:64px;height:64px;">
          <% if current_user.images.attached? %>
            <%= image_tag current_user.images.first, class: "w-100 h-100", style: "object-fit: cover;" %>
          <% else %>
            <%= image_tag "avatar_placeholder.png", class: "w-100 h-100", style: "object-fit: cover;" %>
          <% end %>
        </div>
      </div>
      <div class="col p-3">
        <h1 class="h4 mb-1">Criar novo serviço</h1>
        <div class="text-muted">Cadastre um serviço para que clientes possam encontrá-lo e agendar</div>
      </div>
    </div>
  </div>

  <%= render "form" %>
</div>
