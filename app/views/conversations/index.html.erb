<div class="container py-4 conversations-index">
  <div class="page-header">
    <h1 class="page-title">Minhas Conversas</h1>
    <% if params[:service_id].present? %>
      <%= link_to "Limpar filtro", conversations_path, class: "btn btn-outline-secondary btn-sm" %>
    <% end %>
  </div>

  <% if params[:service_id].present? %>
    <div class="filter-box">
      Filtrando por serviço #<code><%= params[:service_id] %></code>
    </div>
  <% end %>

  <div class="row g-4">
    <div class="col-lg-6">
      <div class="card border-0">
        <div class="card-body">
          <h2 class="section-title">Como profissional</h2>

          <% if @as_professional.any? %>
            <div class="list-group list-group-flush">
              <% @as_professional.each do |c| %>
                <%= link_to conversation_path(c), class: "list-group-item list-group-item-action" do %>
                  <div class="d-flex justify-content-between align-items-start gap-3">
                    <div>
                      <div class="conv-title">
                        <%= c.client.name %>
                        <span class="conv-chip"><%= c.service.name.presence || "Serviço" %></span>
                      </div>
                      <div class="conv-snippet">
                        <%= truncate(c.messages.last&.content.to_s, length: 140) %>
                      </div>
                    </div>

                    <div class="d-flex align-items-center gap-2">
                      <% unread = c.unread_count_for(current_user) %>
                      <% if unread.positive? %>
                        <span class="conv-unread-badge"><%= unread %></span>
                      <% end %>
                      <div class="conv-time">
                        <%= l((c.messages.last&.created_at || c.updated_at), format: :short) %>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <div class="empty">Nenhuma conversa como profissional.</div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="card border-0">
        <div class="card-body">
          <h2 class="section-title">Como cliente</h2>

          <% if @as_client.any? %>
            <div class="list-group list-group-flush">
              <% @as_client.each do |c| %>
                <%= link_to conversation_path(c), class: "list-group-item list-group-item-action" do %>
                  <div class="d-flex justify-content-between align-items-start gap-3">
                    <div>
                      <div class="conv-title">
                        <%= c.professional.name %>
                        <span class="conv-chip"><%= c.service.name.presence || "Serviço" %></span>
                      </div>
                      <div class="conv-snippet">
                        <%= truncate(c.messages.last&.content.to_s, length: 140) %>
                      </div>
                    </div>

                    <div class="d-flex align-items-center gap-2">
                      <% unread = c.unread_count_for(current_user) %>
                      <% if unread.positive? %>
                        <span class="conv-unread-badge"><%= unread %></span>
                      <% end %>
                      <div class="conv-time">
                        <%= l((c.messages.last&.created_at || c.updated_at), format: :short) %>
                      </div>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% else %>
            <div class="empty">Nenhuma conversa como cliente.</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
