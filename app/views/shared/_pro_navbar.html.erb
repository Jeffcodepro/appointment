<nav class="navbar navbar-expand-lg bg-white shadow-sm fixed-top site-navbar pro-navbar">
  <div class="container-fluid">

    <%= link_to root_path, class: "navbar-brand d-flex align-items-center gap-2" do %>
      <%= image_tag "logo2.png", alt: "Logo", class: "brand-logo" %>
      <span class="brand-wordmark d-none d-sm-inline">Appointment</span>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#proNavbar"
            aria-controls="proNavbar" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="proNavbar">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0 align-items-center gap-2">
        <% unread_total = total_unread_for(current_user) %>

        <li class="nav-item">
          <%= link_to service_history_path,
                      class: "nav-link nav-link-pill #{ current_page?(service_history_path) ? 'active' : '' }" do %>
            <i class="fa-regular fa-calendar-check"></i>
            <span>Histórico</span>
          <% end %>
        </li>

        <li class="nav-item position-relative">
          <%= link_to conversations_path,
                      class: "nav-link nav-link-pill #{ current_page?(conversations_path) ? 'active' : '' }" do %>
            <i class="fa-regular fa-comments"></i>
            <span>Minhas conversas</span>
            <% if unread_total.positive? %>
              <span class="nav-badge"><%= unread_total %></span>
            <% end %>
          <% end %>
        </li>

        <% if current_user&.professional? %>
          <li class="nav-item">
            <%= link_to mine_services_path,
                        class: "nav-link nav-link-pill #{ current_page?(mine_services_path) ? 'active' : '' }" do %>
              <i class="fa-regular fa-rectangle-list"></i>
              <span>Meus serviços</span>
              <% count = current_user.services.count %>
              <% if count.positive? %>
                <span class="nav-badge subtle"><%= count %></span>
              <% end %>
            <% end %>
          </li>

          <li class="nav-item d-none d-lg-block">
            <%= link_to new_service_path, class: "btn-nav-cta" do %>
              <i class="fa-solid fa-plus"></i>
              <span>Novo serviço</span>
            <% end %>
          </li>
        <% end %>
      </ul>

      <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">
        <!-- Alternância de visão -->
        <li class="nav-item dropdown me-2 vision-toggle">
          <a class="nav-link dropdown-toggle d-inline-flex align-items-center gap-2"
             href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fa-solid fa-arrows-rotate"></i>
            <span>Visão</span>
            <span class="vision-current <%= current_user.client? ? 'is-client' : 'is-pro' %>">
              <%= current_user.client? ? "Cliente" : "Profissional" %>
            </span>
          </a>

          <ul class="dropdown-menu dropdown-menu-end vision-menu">
            <li class="dropdown-header">Trocar visão</li>

            <li>
              <% if current_user.as_client? %>
                <%= button_to role_path(role: :client),
                      method: :put,
                      form:  { data: { turbo: false } },
                      class: "dropdown-item d-flex align-items-center gap-2 #{ current_user.client? ? 'active' : '' }" do %>
                  <i class="fa-solid fa-user"></i>
                  <div class="flex-fill">
                    <div class="title">Usar como Cliente</div>
                    <div class="sub">Explorar serviços e contratar</div>
                  </div>
                  <% if current_user.client? %><i class="fa-solid fa-check ms-2"></i><% end %>
                <% end %>
              <% else %>
                <button type="button"
                        class="dropdown-item d-flex align-items-center gap-2"
                        data-bs-toggle="modal" data-bs-target="#enableClientModal">
                  <i class="fa-solid fa-user"></i>
                  <div class="flex-fill">
                    <div class="title">Habilitar perfil de Cliente…</div>
                    <div class="sub">Ative para explorar e contratar</div>
                  </div>
                </button>
              <% end %>
            </li>

            <li><hr class="dropdown-divider"></li>

            <li>
              <%= button_to role_path(role: :professional),
                    method: :put,
                    form:  { data: { turbo: false } },
                    class: "dropdown-item d-flex align-items-center gap-2 #{ current_user.professional? ? 'active' : '' }" do %>
                <i class="fa-solid fa-briefcase"></i>
                <div class="flex-fill">
                  <div class="title">Usar como Profissional</div>
                  <div class="sub">Gerenciar serviços e agenda</div>
                </div>
                <% if current_user.professional? %><i class="fa-solid fa-check ms-2"></i><% end %>
              <% end %>
            </li>
          </ul>
        </li>

        <!-- Dropdown do usuário -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle d-flex align-items-center gap-2 nav-user" href="#" role="button"
             data-bs-toggle="dropdown" aria-expanded="false">
            <%= nav_role_avatar_tag(current_user, size: 32) %>
          </a>
          <ul class="dropdown-menu dropdown-menu-end dropdown-menu-user">
            <li class="user-card">
              <div class="user-card__avatar">
                <!-- ⚙️ sem texto no lugar da imagem -->
                <%= nav_role_avatar_tag(current_user, size: 28, text_fallback: false) %>
              </div>
              <div class="user-card__meta">
                <div class="name"><%= first_name(current_user) %></div>
                <div class="email"><%= current_user.email %></div>
              </div>
            </li>

            <li><hr class="dropdown-divider"></li>

            <li>
              <%= link_to edit_profile_path(current_user), class: "dropdown-item" do %>
                <i class="fa-solid fa-id-badge"></i>
                <span>Editar perfil</span>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path,
                           data: { turbo_method: :delete },
                           class: "dropdown-item danger" do %>
                <i class="fa-solid fa-right-from-bracket"></i>
                <span>Sair</span>
              <% end %>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>

<% if user_signed_in? && current_user.professional? && !current_user.as_client? %>
  <div class="modal fade cancel-modal" id="enableClientModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content cancel-modal">
        <div class="modal-header">
          <h5 class="modal-title">Habilitar perfil de cliente?</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
        </div>
        <div class="modal-body">
          <p>Para usar a visão de cliente, habilite seu perfil de cliente.</p>
          <p class="small text-muted mb-0">Você poderá explorar serviços e contratar profissionais.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn--ghost" data-bs-dismiss="modal">Agora não</button>
          <%= button_to "Sim, habilitar agora",
                role_path(role: :client, enable: 1),
                method: :put,
                form: { data: { turbo: false } },
                class: "btn-create-service" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
