<nav class="navbar navbar-expand-lg bg-white shadow-sm fixed-top site-navbar pro-navbar">
  <div class="container-fluid">

    <%= link_to root_path, class: "navbar-brand d-flex align-items-center gap-2" do %>
      <%= image_tag "logo2.png", alt: "Logo", class: "brand-logo" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#proNavbar"
            aria-controls="proNavbar" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="proNavbar">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">

        <li class="nav-item">
          <%= link_to "Histórico de agendamentos",
                      service_history_path,
                      class: "nav-link #{current_page?(service_history_path) ? 'active' : ''}" %>
        </li>

        <% if current_user&.professional? %>
          <li class="nav-item">
            <%= link_to services_path(user_id: current_user.id),
                        class: "nav-link d-flex align-items-center gap-1 #{current_page?(services_path(user_id: current_user.id)) ? 'active' : ''}" do %>
              <span>Meus Serviços</span>
              <% count = current_user.services.count %>
              <% if count.positive? %>
                <span class="badge text-bg-secondary"><%= count %></span>
              <% end %>
            <% end %>
          </li>
        <% end %>
        <% if current_user&.professional? %>
          <li class="nav-item">
            <%= link_to "Criar novo serviço",
                        new_service_path,
                        class: "nav-link" %>
          </li>
        <% end %>
      </ul>

      <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-center">


        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" role="button"
             data-bs-toggle="dropdown" aria-expanded="false">
            <% if current_user.avatar.attached? %>
              <%= cl_image_tag current_user.avatar.key,
                    width: 32, height: 32, crop: :fill, gravity: :face,
                    fetch_format: :auto, quality: :auto,
                    class: "rounded-circle pro-navbar__avatar", alt: current_user.name %>
            <% else %>
              <% initials = (current_user.name.presence || current_user.email).split.map { |s| s[0] }.join.first(2).upcase %>
              <span class="rounded-circle pro-navbar__avatar-fallback"><%= initials %></span>
            <% end %>
            <span class="d-none d-md-inline"><%= first_name(current_user) %></span>

          </a>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><%= link_to "Editar perfil", edit_profile_path(current_user), class: "dropdown-item" %></li>
            <li><hr class="dropdown-divider"></li>
            <li>
              <%= link_to "Sair", destroy_user_session_path,
                           data: { turbo_method: :delete },
                           class: "dropdown-item text-danger" %>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</nav>
