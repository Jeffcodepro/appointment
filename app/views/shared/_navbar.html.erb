<!-- app/views/shared/_navbar.html.erb -->
<div class="navbar navbar-expand-sm bg-white shadow-sm fixed-top site-navbar">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand d-flex align-items-center gap-2" do %>
      <%= image_tag "logo2.png", class: "brand-logo", alt: "Logo" %>
      <span class="brand-wordmark d-none d-sm-inline">Appointments</span>
    <% end %>

    <button class="navbar-toggler border-0" type="button"
            data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto align-items-center gap-2">
        <% if user_signed_in? && current_user.role == "client" %>
          <% unread_total = total_unread_for(current_user) %>

          <li class="nav-item d-none d-md-block">
            <span class="nav-greeting">Olá, <%= first_name(current_user) %></span>
          </li>

          <li class="nav-item">
            <%= link_to service_history_path,
                        class: "nav-link nav-link-pill #{current_page?(service_history_path) ? 'active' : ''}" do %>
              <i class="fa-regular fa-calendar-check"></i>
              <span>Histórico</span>
            <% end %>
          </li>

          <li class="nav-item position-relative">
            <%= link_to conversations_path,
                        class: "nav-link nav-link-pill #{current_page?(conversations_path) ? 'active' : ''}" do %>
              <i class="fa-regular fa-comments"></i>
              <span>Minhas conversas</span>
              <% if unread_total.positive? %>
                <span class="nav-badge"><%= unread_total %></span>
              <% end %>
            <% end %>
          </li>

          <li class="nav-item dropdown ms-1">
            <a class="nav-link dropdown-toggle d-flex align-items-center gap-2 nav-user"
               href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <% if current_user.avatar.attached? %>
                <%= cl_image_tag current_user.avatar.key,
                      width: 32, height: 32, crop: :fill, gravity: :face,
                      fetch_format: :auto, quality: :auto,
                      class: "rounded-circle navbar__avatar", alt: current_user.name %>
              <% else %>
                <% initials = (current_user.name.presence || current_user.email).split.map { |s| s[0] }.join.first(2).upcase %>
                <span class="rounded-circle navbar__avatar-fallback"><%= initials %></span>
              <% end %>
              <span class="d-none d-md-inline"><%= first_name(current_user) %></span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><%= link_to "Minha conta", edit_user_registration_path, class: "dropdown-item" %></li>
              <li><hr class="dropdown-divider"></li>
              <li>
                <%= link_to "Sair", destroy_user_session_path,
                             data: { turbo_method: :delete },
                             class: "dropdown-item text-danger" %>
              </li>
            </ul>
          </li>

        <% elsif user_signed_in? %>
          <li class="nav-item">
            <%= link_to dashboard_path,
                        class: "nav-link nav-link-pill #{current_page?(dashboard_path) ? 'active' : ''}" do %>
              <i class="fa-solid fa-gauge"></i>
              <span>Dashboard</span>
            <% end %>
          </li>
          <li class="nav-item ms-2">
            <%= link_to "Sair", destroy_user_session_path,
                data: { turbo_method: :delete }, class: "btn-logout-nav" %>
          </li>

        <% else %>
          <li class="nav-item">
            <div class="nav-guest">
              <%= link_to new_user_session_path, class: "btn-nav-login" do %>
                <i class="fa-solid fa-right-to-bracket"></i>
                <span>Entrar</span>
              <% end %>

              <%= link_to new_user_registration_path, class: "btn-nav-cta" do %>
                <i class="fa-solid fa-user-plus"></i>
                <span>Criar conta</span>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
