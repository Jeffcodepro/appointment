<div class="navbar navbar-expand-sm bg-white shadow-sm fixed-top site-navbar">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand d-flex align-items-center" do %>
      <%= image_tag "logo2.png", class: "brand-logo" %>
    <% end %>

    <button class="navbar-toggler border-0" type="button"
            data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto align-items-center gap-2">
        <% if user_signed_in? && current_user.role == "client" %>
          <li class="nav-item">
            <span class="nav-greeting">Olá, <%= first_name(current_user) %></span>
          </li>

          <li class="nav-item">
            <%= link_to "Meus agendamentos", dashboard_path, class: "nav-link nav-link-" %>
          </li>

          <li class="nav-item">
            <%= link_to "Histórico de agendamentos", service_history_path, class: "nav-link" %>
          </li>

          <li class="nav-item ms-2">
            <%= link_to "Sair", destroy_user_session_path,
                data: { turbo_method: :delete }, class: "btn-logout-nav" %>
          </li>

        <% elsif user_signed_in? %>
          <!-- opcional: menu para outros papéis -->
          <li class="nav-item"><%= link_to "Dashboard", dashboard_path, class: "nav-link" %></li>
          <li class="nav-item ms-2">
            <%= link_to "Sair", destroy_user_session_path,
                data: { turbo_method: :delete }, class: "btn-logout-nav" %>
          </li>

        <% else %>
          <li class="nav-item"><%= link_to "Entrar", new_user_session_path, class: "nav-link" %></li>
          <li class="nav-item">
            <%= link_to "Criar conta", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
