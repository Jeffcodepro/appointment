<%= form_with url: conversation_messages_path(conversation),
              scope: :message,
              method: :post,
              data: { controller: "prevent-multi-submit", turbo: true } do |f| %>
  <div class="input-group">
    <%= f.text_area :content, rows: 2, class: "form-control", placeholder: "Escreva sua mensagem..." %>
    <button class="btn btn-primary" type="submit">Enviar</button>
  </div>
  <% if message.errors.any? %>
    <div class="text-danger small mt-1"><%= message.errors.full_messages.to_sentence %></div>
  <% end %>
<% end %>
